<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet author="higor.baltieri" id="1716862058074-4">
        <createTable tableName="permission">
            <column autoIncrement="true" name="id" startWith="4" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="permission_pkey"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet author="higor.baltieri" id="1716862058074-5">
        <createTable tableName="house">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="house_id_pk"/>
            </column>
            <column name="owner" type="VARCHAR(250)"/>
            <column defaultValueBoolean="false" name="fully_paid" type="BOOLEAN"/>
        </createTable>
    </changeSet>
    <changeSet author="higor.baltieri" id="1716862058074-6">
        <addUniqueConstraint columnNames="owner" constraintName="house_owner_unq" tableName="house"/>
    </changeSet>
    <changeSet author="higor.baltieri" id="1716862058074-7">
        <createTable tableName="item">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="item_id_pk"/>
            </column>
            <column name="name" type="VARCHAR(250)"/>
            <column name="house_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="higor.baltieri" id="1716862058074-8">
        <createTable tableName="user_entity">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="user_entity_pkey"/>
            </column>
            <column name="password" type="VARCHAR(255)"/>
            <column name="username" type="VARCHAR(255)"/>
            <column name="account_non_expired" type="BOOLEAN"/>
            <column name="account_non_locked" type="BOOLEAN"/>
            <column name="credentials_non_expired" type="BOOLEAN"/>
            <column name="enabled" type="BOOLEAN"/>
        </createTable>
    </changeSet>
    <changeSet author="higor.baltieri" id="1716862058074-9">
        <createTable tableName="user_permission">
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="permission_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="higor.baltieri" id="1716862058074-10">
        <addForeignKeyConstraint baseColumnNames="permission_id" baseTableName="user_permission"
                                 constraintName="fkbklmo9kchans5u3e4va0ouo1s" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION"
                                 referencedColumnNames="id" referencedTableName="permission" validate="true"/>
    </changeSet>
    <changeSet author="higor.baltieri" id="1716862058074-11">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="user_permission"
                                 constraintName="fksycmgc3ar7frcui2hn4ktgdqo" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION"
                                 referencedColumnNames="id" referencedTableName="user_entity" validate="true"/>
    </changeSet>
</databaseChangeLog>
